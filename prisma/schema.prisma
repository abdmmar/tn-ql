// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model NationalPark {
  id                  Int @id @default(autoincrement())
  name                String
  image               Image[]
  link                String
  year                Int
  total_area          String
  waters_percentages  String?
  intl_status         InternationalStatus[]
  region              String
  description         String
  coordinate          Coordinate?
  map                 String
  location            String
  established         String
  visitors            String
  management          String
}

model Image {
  id                Int @id @default(autoincrement())
  link              String
  title             String
  width             String
  height            String
  size              String
  type              String
  date              DateTime? 
  original_source   String?
  author            String?
  src               String
  nationalPark      NationalPark[]
  license           License[]
}

model License {
  id      Int @id @default(autoincrement())
  type    String?
  link    String?
  image   Image[]
}

model InternationalStatus {
  id            Int @id @default(autoincrement())
  status        String
  nationalPark  NationalPark[]
}

model Coordinate {
  id              Int @id @default(autoincrement())
  latitude        String
  longitude       String
  natinoalPark    NationalPark @relation(fields: [nationalParkId], references: [id])
  nationalParkId  Int
}
